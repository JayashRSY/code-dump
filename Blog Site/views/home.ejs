<%- include("partials/header.ejs"); -%>

    <main>
        <h1>Home</h1>
        <p><%= blogContent %></p>
        <% allPosts.forEach(post => { %>
            <div>
                <h3>
                    <%= post.postTitle %>
                </h3>
                <div>
                    <%= post.postContent.substring(0, 100) + "..." %>
                    <a href="/posts/<%= post.postTitle %>">Read More</a>
                </div>
            </div>
        <% }); %>
        
    </main>

